<h1 class="font-bold">Posts</h1>
 <% if user_signed_in? %>
 <h3 class="text-center text-xl font-bold">Hello Members! Welcome to the Developers World!</h3>
  <% else %>
  <h3 class="text-center text-xl font-bold"> Welcome to the Developers World!</h3>
   <% end %>

<% @posts.each do |post| %>     
    <% if user_signed_in? %>
    
     <h3 class="font-bold"><%= post.title %></h3>
     <p><%= post.content %></p>  
     <p class="text-sm italic text-left text-white">Author: <%= post.user.name %></p>
    <% else %>
    
    <h3 class="font-bold"><%= post.title %></h3>
    <p><%= post.content %></p>  
    <p class="text-sm italic text-left text-white">Author's name is accessible only for authorized users</p>
    <% end %>
  
<% end %>

<%= link_to "New Post", new_post_path %>